@page
@using Microsoft.AspNetCore.Mvc.Localization
@using FeatureRequestProject.Localization
@using Volo.Abp.Users
@model FeatureRequestProject.Web.Pages.IndexModel
@inject IHtmlLocalizer<FeatureRequestProjectResource> L
@inject ICurrentUser CurrentUser

@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}

<div class="container fade-in-up">
    <div class="p-5 text-center bg-white border rounded-3 shadow-sm mt-4 mb-5 position-relative overflow-hidden welcome-card">
        <div class="bg-decoration-icon">
            <i class="fas fa-lightbulb fa-10x"></i>
        </div>

        <div class="mb-4 text-primary position-relative">
            <i class="fas fa-lightbulb fa-4x"></i>
        </div>

        <h1 class="display-5 fw-bold text-dark">@L["WelcomeTitle"]</h1>
        <p class="col-md-8 fs-5 mx-auto text-secondary">
            @L["WelcomeSubtitle"]
        </p>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-5 position-relative">
            @if (!CurrentUser.IsAuthenticated)
            {
                <a abp-button="Primary" href="/Account/Login" class="btn-lg px-5 gap-3 shadow-sm">
                    <i class="fa fa-sign-in-alt me-2"></i> @L["Login"]
                </a>
            }
            else
            {
                <div class="text-center">
                    <div class="alert alert-light border shadow-sm d-inline-block px-4 py-2 mb-3 text-primary fw-bold">
                        <i class="fas fa-user-circle me-1"></i> @L["WelcomeUser", CurrentUser.UserName]
                    </div>
                    <br />
                    <a href="/FeatureRequests" class="btn btn-primary btn-lg px-5 gap-3 shadow-sm">
                        <i class="fas fa-list-ul me-2"></i> @L["SeeRequests"]
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        <div class="col">
            <div class="card h-100 text-center border-0 shadow-sm hover-shadow transition-style">
                <div class="card-body py-5">
                    <div class="text-primary mb-4">
                        <div class="d-inline-block p-3 rounded-circle bg-primary bg-opacity-10">
                            <i class="fas fa-plus-circle fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="card-title fw-bold">@L["CardCreateTitle"]</h5>
                    <p class="card-text text-muted px-2">
                        @L["CardCreateDesc"]
                    </p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 text-center border-0 shadow-sm hover-shadow transition-style">
                <div class="card-body py-5">
                    <div class="text-warning mb-4">
                        <div class="d-inline-block p-3 rounded-circle bg-warning bg-opacity-10">
                            <i class="fas fa-star fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="card-title fw-bold">@L["CardVoteTitle"]</h5>
                    <p class="card-text text-muted px-2">
                        @L["CardVoteDesc"]
                    </p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 text-center border-0 shadow-sm hover-shadow transition-style">
                <div class="card-body py-5">
                    <div class="text-info mb-4">
                        <div class="d-inline-block p-3 rounded-circle bg-info bg-opacity-10">
                            <i class="fas fa-tasks fa-2x"></i>
                        </div>
                    </div>
                    <h5 class="card-title fw-bold">@L["CardTrackTitle"]</h5>
                    <p class="card-text text-muted px-2">
                        @L["CardTrackDesc"]
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center text-muted py-4 border-top mt-5">
        <small>@L["FooterRights", DateTime.Now.Year]</small>
    </div>

    <div class="mb-5 text-center">
        <p class="align-middle">
            <a href="https://twitter.com/abpframework" target="_blank" class="mx-2 text-decoration-none text-secondary hover-primary"><i class="fab fa-twitter"></i> Abp Framework</a>
            <a href="https://github.com/abpframework/abp" target="_blank" class="mx-2 text-decoration-none text-secondary hover-primary"><i class="fab fa-github"></i> Github</a>
        </p>
    </div>
</div>