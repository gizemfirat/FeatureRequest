@page
@using FeatureRequestProject.Localization
@using FeatureRequestProject.Web.Pages.FeatureRequests
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model ViewModalModel
@inject IStringLocalizer<FeatureRequestProjectResource> L
@{
    Layout = null;
}


<abp-modal size="Large">
    <abp-modal-header title="@Model.FeatureRequest.Title"></abp-modal-header>

    <abp-modal-body>
        <abp-card>
            <abp-card-body>
                <h6 class="text-primary fw-bold">@L["Description"]</h6>
                <p>@Model.FeatureRequest.Description</p>
            </abp-card-body>
        </abp-card>


        <abp-row class="mt-4">
            <abp-column size-md="_6">
                <abp-badge theme="Info" class="me-1">
                    <i class="fa fa-tag"></i> @L["Enum:Category." + (int)Model.FeatureRequest.CategoryId]
                </abp-badge>
                <abp-badge theme="Secondary">
                    <i class="fa fa-info-circle"></i> @L["Enum:Status." + (int)Model.FeatureRequest.Status]
                </abp-badge>
            </abp-column>

            <abp-column size-md="_6" class="text-end">
                <span class="me-2 fw-bold small text-muted">@L["DidYouFindThisHelpful"]</span>
                <abp-button-group size="Small">
                    <abp-button icon="thumbs-up" button-type="Success" class="modal-vote-btn" 
                                data-id="@Model.FeatureRequest.Id" data-type="1" />
                    <abp-button icon="thumbs-down" button-type="Danger" class="modal-vote-btn" 
                                data-id="@Model.FeatureRequest.Id" data-type="-1" />
                </abp-button-group>
            </abp-column>
        </abp-row>

        <abp-row class="mt-4">
            <abp-column size="_12">
                <div id="comments-section" class="mb-4">
                    <h6 class="fw-bold mb-3"><i class="fa fa-comments me-2"></i> @L["Comments"]</h6>

                    @if (Model.FeatureRequest.Comments == null || !Model.FeatureRequest.Comments.Any())
                    {
                        <p class="text-muted small italic">@L["NoCommentsYet"]</p>
                    }
                    else
                    {
                        @foreach (var comment in Model.FeatureRequest.Comments.OrderByDescending(c => c.CreationTime))
                        {
                            <div class="p-3 mb-2 bg-light border rounded shadow-sm">
                                <div class="d-flex justify-content-between mb-1">
                                    <span class="fw-bold small text-primary text-lowercase">@@@comment.UserName</span>
                                    <span class="text-muted" style="font-size: 0.7rem;">@comment.CreationTime.ToString("g")</span>
                                </div>
                                <p class="mb-0 small text-dark">@comment.Content</p>
                            </div>
                        }
                    }
                </div>

                <div class="mt-3">
                    <abp-input asp-for="@Model.NewCommentContent" label="@L["WriteAComment"].Value" rows="3" />
                    <div class="text-end mt-2">
                        <abp-button button-type="Primary" size="Small" id="btn-send-comment"
                                    data-id="@Model.FeatureRequest.Id" icon="paper-plane" text="@L["Send"].Value" />
                    </div>
            </abp-column>
        </abp-row>
    </abp-modal-body>

    <abp-modal-footer buttons="@(AbpModalButtons.Close)"></abp-modal-footer>
</abp-modal>